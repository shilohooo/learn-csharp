<UserControl
    x:Class="Avalonia.DataTemplates.BasicDataTemplateSample.Views.PersonView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Avalonia.DataTemplates.BasicDataTemplateSample.Models"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="models:Person"
    mc:Ignorable="d">
    <UserControl.Styles>
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="18" />
        </Style>
    </UserControl.Styles>

    <Border
        Margin="0,10,0,10"
        Padding="10"
        Background="#099fff"
        CornerRadius="12">
        <Grid ColumnDefinitions="Auto *" RowDefinitions="Auto Auto Auto Auto">
            <TextBlock Text="First Name: " />
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Text="{Binding FirstName}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Text="Last Name: " />
            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding LastName}" />

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Text="Age: " />
            <TextBlock
                Grid.Row="2"
                Grid.Column="1"
                Text="{Binding Age, StringFormat={}{0} years}" />

            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                Text="Sex: " />
            <TextBlock
                Grid.Row="3"
                Grid.Column="1"
                Text="{Binding Sex}" />
        </Grid>
    </Border>
</UserControl>