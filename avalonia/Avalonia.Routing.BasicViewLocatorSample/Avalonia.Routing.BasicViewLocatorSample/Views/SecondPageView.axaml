<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Avalonia.Routing.BasicViewLocatorSample.Views.SecondPageView"
    x:DataType="vm:SecondPageViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Avalonia.Routing.BasicViewLocatorSample.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.DataContext>
        <vm:SecondPageViewModel />
    </Design.DataContext>

    <StackPanel
        MaxWidth="360"
        Spacing="5"
        VerticalAlignment="Center">
        <TextBlock
            FontSize="16"
            FontWeight="Bold"
            Text="Enter you Credentials"
            TextAlignment="Center"
            TextWrapping="Wrap"
            VerticalAlignment="Center" />

        <TextBox
            FontSize="16"
            Text="{Binding Email}"
            UseFloatingWatermark="True"
            VerticalAlignment="Center"
            Watermark="Email" />

        <TextBox
            FontSize="16"
            PasswordChar="*"
            Text="{Binding Password}"
            UseFloatingWatermark="True"
            VerticalAlignment="Center"
            Watermark="Password" />
    </StackPanel>
</UserControl>