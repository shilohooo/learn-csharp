<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Avalonia.Routing.BasicViewLocatorSample.Views.ThirdPageView"
    x:DataType="vm:ThirdPageViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Avalonia.Routing.BasicViewLocatorSample.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.DataContext>
        <vm:ThirdPageViewModel />
    </Design.DataContext>

    <TextBlock
        FontSize="24"
        FontWeight="Bold"
        HorizontalAlignment="Center"
        Text="{Binding Message, StringFormat='{}{0}:)'}"
        VerticalAlignment="Center" />
</UserControl>