        <TabControl ItemsSource="{Binding Tables}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Code}" />
                </DataTemplate>
            </TabControl.ItemTemplate>


            <TabControl.ContentTemplate>
                <DataTemplate x:DataType="models:Table">
                    <DataGrid ItemsSource="{Binding Columns}" AutoGenerateColumns="False" IsReadOnly="True"
                              Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="列名" Binding="{Binding Code}" />
                            <DataGridTextColumn Header="数据类型" Binding="{Binding DataType}" />
                            <DataGridTextColumn Header="数据长度" Binding="{Binding Length}" />
                            <DataGridTextColumn Header="是否必填" Binding="{Binding Mandatory}" />
                            <DataGridTextColumn Header="是否为主键" Binding="{Binding IsPrimaryKey}" />
                            <DataGridTextColumn Header="注释" Binding="{Binding Name}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </StackPanel>
</Window>