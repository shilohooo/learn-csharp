<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Maui.FileExplorer.Sample.Views.DrivePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converter="clr-namespace:Maui.FileExplorer.Sample.Converters"
    xmlns:vm="clr-namespace:Maui.FileExplorer.Sample.ViewModels"
    Title="Devices">
    <ContentPage.BindingContext>
        <vm:DriveViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <converter:ByteToGigabyteConverter x:Key="ByteToGigabyte" />
    </ContentPage.Resources>
    <StackLayout Padding="10,10,10,10">
        <CollectionView ItemsSource="{Binding Drives}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding VolumeLabel}" />
                        <Label Text="{Binding Name}" />
                        <Label Text="{Binding TotalSize, Converter={StaticResource ByteToGigabyte}}" />
                        <Label Text="{Binding AvailableFreeSpace, Converter={StaticResource ByteToGigabyte}}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>