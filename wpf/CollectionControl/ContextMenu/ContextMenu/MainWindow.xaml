<Window x:Class="ContextMenu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="WPF ContextMenu Example" Height="450" Width="800">
    <!-- 上下文菜单（右键菜单） -->
    <Grid>
        <Border Background="#1989fa" Width="200" Height="200" CornerRadius="16">
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="复制" Click="OnMenuItemClick" />
                    <MenuItem Header="粘贴" Click="OnMenuItemClick" />
                    <MenuItem Header="删除" Click="OnMenuItemClick" />
                    <MenuItem Header="关于" Click="OnMenuItemClick" />
                </ContextMenu>
            </Border.ContextMenu>
        </Border>
    </Grid>
</Window>